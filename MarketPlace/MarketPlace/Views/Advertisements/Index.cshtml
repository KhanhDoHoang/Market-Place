@model MarketPlace.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index for Brokerage @Html.DisplayFor(modelItem => modelItem.Brokerage.Title)</h1>

<p>
    <a asp-action="Create" asp-route-id="@Model.Brokerage.Id" >Create New</a> <br />
    <a asp-controller="Brokerages" asp-action="Index">Back To List</a>
</p>

@if ( Model.Advertisements == null || Model.Advertisements.Count() == 0)
{
    <h3>There are no files to display.</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    FileName
                </th>
                <th>
                    Image
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Advertisements) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        <img src="@item.Url" style="max-width: 400px;" />
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}